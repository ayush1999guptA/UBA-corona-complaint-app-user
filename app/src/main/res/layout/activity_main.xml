<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" android:background="@android:color/holo_orange_light">
    <Button
        android:text="User Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_login"
        android:layout_centerHorizontal="true" android:layout_marginTop="300dp" android:layout_marginLeft="100dp"
        android:textSize="18sp" android:background="@android:color/holo_blue_light" android:textColor="#fff"/>
    <Button
        android:text="admin Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_login"
        android:layout_below="@id/user_login"
        android:layout_centerHorizontal="true" android:layout_marginTop="25dp" android:layout_marginLeft="100dp"
        android:textSize="18sp" android:background="@android:color/holo_blue_light" android:textColor="#fff"/>
</RelativeLayout>